#!/usr/bin/env sh

dunst &
monitor
sxhkd &
xbanish &
xkbcomp "$XDG_CONFIG_HOME/xkb" "$DISPLAY"

while clipnotify; do xsel -bo | xsel -bi; done &
while xwinnotify > /dev/null; do sudo chvt 1; done &

(sleep .1
  "$BROWSER" &
  alttab -bg '#2e3440' -fg "#2e3440" -frame "#434c5e" -d 1 -bw 1 -t 64x64 -i 64x64 &
  bstatus -l &
)&

exec sswm
