{

    "codeLens.enable": false,
    "diagnostic.enable": false,
    "signature.enable": false,

    "coc.preferences.snippets.enable": false,
    "coc.preferences.useQuickfixForLocations": true,
    "coc.source.buffer.enable": false,
    "coc.source.file.ignoreHidden": false,

    "python.analysis.diagnosticEnabled": false,
    "python.autoComplete.addBrackets": true,
    "python.autoComplete.showAdvancedMembers": false,
    "python.jediEnabled": true,
    "python.linting.enabled": false,
    "python.workspaceSymbols.enabled": false,

    "suggest.autoTrigger": "trigger",
    "suggest.floatEnable": false,
    "suggest.localityBonus": false,
    "suggest.minTriggerInputLength": 2,
    "suggest.noselect": false,
    "suggest.removeDuplicateItems": true,
    "suggest.snippetIndicator": "",
    "suggest.triggerAfterInsertEnter": true,

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": { "cache": { "directory": "/tmp/ccls" } }
        }
    }

}
