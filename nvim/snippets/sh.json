{
  "shebang": {
    "prefix": ["s"],
    "body": ["#!/usr/bin/env sh\n\n"]
  },
  "alias": {
    "prefix": ["a"],
    "body": ["alias $1=\"$0\""]
  },
  "function": {
    "prefix": ["f"],
    "body": ["$1() {\n\t$0\n}"]
  },
  "function-oneliner": {
    "prefix": ["fl"],
    "body": ["$1() { $0; }"]
  },
  "[  ]": {
    "prefix": ["["],
    "body": ["[ $0 ]"]
  },
  "if": {
    "prefix": ["i"],
    "body": ["if [ $0 ]; then\nfi"]
  }
}
