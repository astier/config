# MMRDF
alias m="mv -iv"
alias md="mkdir -pv"
mx() { touch "$1" && chmod +x "$1"; }
mf() {
    for arg in "$@"; do
        dir=$(dirname "$arg")
        [ ! -d "$dir" ] && mkdir -pv "$dir"
        touch "$arg" && echo touch: created file \'"$arg"\'
    done
}

