alias fs="jumpopen \$CONFIG shrc && . shrc"
alias fu="nvim +'h user-manual | winc o'"
alias fx="jumpopen \$CONFIG sx/sxrc"
f() { if [ -d "$1" ]; then cd "$1" || return; else "$LAUNCHER" "$@"; fi }
jumpopen() { cd "$1" >/dev/null && shift && "$LAUNCHER" "$@" ; }

# BOOKMARKS - DATA
