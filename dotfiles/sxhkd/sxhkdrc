super + shift + r
    pkill -SIGUSR1 sxhkd
super + {s,d}
    light -{U,A} 8
super + shift + {s,d}
    amixer set Master 4{-,+}

mod5 + shift + m
    amixer set Master toggle
mod5 + f
    launch
mod5 + s ; {l,p,r,s}
    {slock,poweroff,reboot,systemctl suspend}
mod5 + {a,u,v}
    mpv ~/media/{asmr,music,videos}

button2
    herbstclient spawn ~/.config/herbstluftwm/maximize.sh
button8
    herbstclient cycle +1
button9
    herbstclient cycle -1
