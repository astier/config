# GIT
g() { n=16; [ "$#" != 0 ] && n=$1; git log --all --graph --decorate --oneline -n"$n"; }
grb() { n=8; [ "$#" != 0 ] && n=$1; git rebase -i HEAD~"$n"; }
grh() { n=0; [ "$#" != 0 ] && n=$1; git reset --hard HEAD~"$n"; }

