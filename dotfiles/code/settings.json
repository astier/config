{
    "cSpell.userWords": [
        "cmap",
        "datapoint",
        "datapoints",
        "dataset",
        "datasets",
        "imshow",
        "keras",
        "lstm",
        "numpy",
        "pyplot",
        "rint"
    ],

    "breadcrumbs.enabled": false,
    "breadcrumbs.filePath": "last",
    "breadcrumbs.icons": false,

    "cSpell.fixSpellingWithRenameProvider": true,
    "cSpell.showStatus": false,

    "debug.inlineValues": true,
    "debug.openExplorerOnEnd": true,
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.toolBarLocation": "docked",

    "diffEditor.renderSideBySide": false,

    "editor.accessibilitySupport": "off",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.cursorBlinking": "solid",
    "editor.cursorSurroundingLines": 4,
    "editor.fontFamily": "monospace",
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "editor.hideCursorInOverviewRuler": true,
    "editor.hover.enabled": false,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.mouseWheelZoom": true,
    "editor.renderLineHighlight": "none",
    "editor.rulers": [ 88 ],
    "editor.snippetSuggestions": "none",
    "editor.suggest.localityBonus": true,
    "editor.tabCompletion": "onlySnippets",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 88,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.visible": 0,

    "extensions.autoUpdate": false,
    "extensions.closeExtensionDetailsOnViewChange": true,

    "files.autoSave": "afterDelay",
    "files.enableTrash": false,
    "files.exclude": { "**/__pycache__": true },
    "files.hotExit": "off",
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "keyboard.dispatch": "keyCode",

    "latex-workshop.chktex.enabled": true,
    "latex-workshop.latex.outDir": "%DIR%/tex",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.pdf.viewer": "browser",

    "python.autoComplete.addBrackets": true,
    "python.jediEnabled": false,
    "python.linting.pylintUseMinimalCheckers": false,

    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,

    "task.quickOpen.skip": true,

    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.inheritEnv": true,
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.splitCwd": "initial",

    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    "update.mode": "manual",

    "window.enableMenuBarMnemonics": false,
    "window.menuBarVisibility": "toggle",

    "workbench.colorTheme": "Nord",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.enableExperiments": false,
    "workbench.octiconsUpdate.enabled": true,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.startupEditor": "none",

    "vim.camelCaseMotion.enable": true,
    "vim.changeWordIncludesWhitespace": true,
    "vim.foldfix": true,
    "vim.gdefault": true,
    "vim.hlsearch": true,
    "vim.leader": " ",
    "vim.neovimPath": "/bin/nvim",
    "vim.showmodename": false,

    "vim.normalModeKeyBindingsNonRecursive": [

        { "before": [ ":" ], "commands": [ "workbench.action.showCommands" ] },
        { "before": [ "<leader>", "h", "u" ], "commands": [ "git.revertSelectedRanges" ] },
        { "before": [ "cr" ], "after": [ "o", "<esc>" ] },

        { "before": [ "$" ], "after": [ "g", "$" ] },
        { "before": [ "0" ], "after": [ "g", "0" ] },
        { "before": [ "j" ], "after": [ "g", "j" ] },
        { "before": [ "k" ], "after": [ "g", "k" ] }

    ],
}
