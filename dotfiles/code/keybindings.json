[

    { "key": "alt+e", "command": "workbench.action.previousEditor" },
    { "key": "alt+r", "command": "workbench.action.nextEditor" },
    { "key": "alt+tab", "command": "workbench.action.closeActiveEditor" },

    { "key": "alt+d", "command": "editorScroll", "when": "editorTextFocus",
        "args": { "to": "up", "by": "line", "revealCursor": true, "value": 2 }
    },
    { "key": "alt+f", "command": "editorScroll", "when": "editorTextFocus",
        "args": { "to": "down", "by": "line", "revealCursor": true, "value": 2 }
    },

    { "key": "shift+alt+f", "command": "workbench.action.quickOpen", "when": "editorTextFocus" },

    { "command": "-vscode-neovim.escape", "key": "ctrl+c" },
    { "key": "ctrl+c", "command": "vscode-neovim.send", "when": "neovim.mode == visual", "args": "<C-c>" }

]
