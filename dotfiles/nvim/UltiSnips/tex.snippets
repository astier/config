global !p
def fix_indent(snip):
    vim.eval('feedkeys("\<c-f>")')
endglobal

snippet s "section" b
\section{$1}
endsnippet

snippet ss "subsection" b
\subsection{$1}
endsnippet

snippet sss "subsubsection" b
\subsubsection{$1}
endsnippet

post_expand "fix_indent(snip)"
snippet i "item" b
\item $1
endsnippet

snippet it "itemize" b
\begin{itemize}
	\item $0
\end{itemize}
endsnippet

snippet e "enumerate" b
\begin{enumerate}
	\item $0
\end{enumerate}
endsnippet
