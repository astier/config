{
    "bashIde.path": "/usr/bin/bash-language-server",
    "code-runner.respectShebang": false,
    "code-runner.runInTerminal": true,
    "debug.toolBarLocation": "docked",
    "editor.accessibilitySupport": "off",
    "editor.cursorBlinking": "solid",
    "editor.minimap.enabled": false,
    "editor.suggest.localityBonus": true,
    "editor.wordWrap": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
        "**/__pycache__": true
    },
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "keyboard.dispatch": "keyCode",
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.latex.autoBuild.onSave.enabled": false,
    "latex-workshop.latex.clean.enabled": true,
    "latex-workshop.latex.clean.onFailBuild.enabled": true,
    "latex-workshop.latex.outputDir": "./output",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "markdown.extension.preview.autoShowPreviewToSide": true,
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "markdown.extension.toc.githubCompatibility": true,
    "python.autoComplete.addBrackets": true,
    "python.jediEnabled": false,
    "python.linting.pylintUseMinimalCheckers": false,
    "python.pythonPath": "~/miniconda3/envs/isy/bin/python",
    "python.formatting.autopep8Args": [
        "-aa"
    ],
    "python.linting.pylintArgs": [
        "-d C0103, C0111, W0511",
        "--max-line-length=79"
    ],
    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,
    "terminal.integrated.copyOnSelection": true,
    "window.menuBarVisibility": "toggle",
    "window.title": "VSCode${separator}${rootName}${separator}${activeEditorShort}${dirty}",
    "workbench.colorTheme": "Material Theme Palenight High Contrast",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.settings.openDefaultSettings": false,
    "workbench.startupEditor": "none",
    "cSpell.userWords": [
        "PYGAME",
        "dotfiles",
        "numpy",
        "randn",
        "symlinks"
    ]
}
