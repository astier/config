{
    "cSpell.userWords": [
        "aleks",
        "aleksandrs",
        "bielefeld",
        "bootctl",
        "bootloader",
        "bootup",
        "conda",
        "cryptsetup",
        "dotfiles",
        "keras",
        "lstm",
        "luks",
        "mirrorlist",
        "numpy",
        "pacman",
        "pycache",
        "pygame",
        "randn",
        "rint",
        "scikit",
        "scipy",
        "sklearn",
        "stier",
        "systemd",
        "tanh"
    ],
    "code-runner.respectShebang": false,
    "code-runner.runInTerminal": true,
    "debug.toolBarLocation": "docked",
    "editor.accessibilitySupport": "off",
    "editor.cursorBlinking": "solid",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.rulers": [79],
    "editor.suggest.localityBonus": true,
    "editor.wordWrap": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/__pycache__": true
    },
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "keyboard.dispatch": "keyCode",
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.latex.autoBuild.onSave.enabled": false,
    "latex-workshop.latex.clean.onFailBuild.enabled": true,
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "markdown.extension.toc.githubCompatibility": true,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown.preview.markEditorSelection": false,
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.scrollPreviewWithEditor": false,
    "materialTheme.showReloadNotification": false,
    "python.autoComplete.addBrackets": true,
    "python.jediEnabled": false,
    "python.linting.pylintUseMinimalCheckers": false,
    "python.pythonPath": "~/miniconda3/envs/isy/bin/python",
    "python.linting.pylintArgs": [
        "-d C0102, C0103, C0111, C0200, C0330, R0903, R0913, R0914, W0511",
        "--max-line-length=79"
    ],
    "python.formatting.autopep8Args": [
        "-aa"
    ],
    "python.formatting.blackArgs": ["-l79"],
    "search.smartCase": true,
    "search.useGlobalIgnoreFiles": true,
    "terminal.integrated.copyOnSelection": true,
    "vim.foldfix": true,
    "vim.hlsearch": true,
    "vim.visualstar": true,
    "window.menuBarVisibility": "toggle",
    "window.title": "VSCode${separator}${rootName}",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Nord",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.settings.openDefaultSettings": false,
    "workbench.startupEditor": "none",
    "latex-workshop.latex.outDir": "%DIR%/tex",
    "python.formatting.provider": "black",
    "editor.hover.sticky": false,
    "editor.hover.enabled": false,
}
