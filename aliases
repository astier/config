alias b="cd - >/dev/null && ls"
alias c="cd .."
alias clean="sudo pacman -Rns \$(pacman -Qttdq); sudo pacman -Sc; rm -r \$XDG_CACHE_HOME/* sudo rm -fr /var/log/journal/*"
alias dus="du -s"
alias e="\$EDITOR ."
