alias kra="git rebase --abort"
alias krc="git rebase --continue"
krb() { n=16; [ "$1" ] && n=$1; git rebase -i HEAD~"$n"; }

alias krr="git reset --hard; git clean -f"
alias krs="git reset --soft"
